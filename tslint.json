{
    "extends": [
        "tslint:recommended",
        "tslint-react",
        "tslint-config-prettier",
        "tslint-react-hooks"
    ],
    "rulesDirectory": [
        "tslint-plugin-prettier"
    ],
    "rules": {
        "prettier": true,
        "interface-name": false,
        "react-hooks-nesting": "error",
        "member-ordering": true,
        "import-spacing": true,
        "semicolon": [true, "always", "ignore-bound-class-methods"],
        "indent": {
            "options": "spaces"
        },
        "no-shadowed-variable": true
    }
}